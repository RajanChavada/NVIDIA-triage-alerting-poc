# =============================================================================
# NVIDIA Triage Alerting MVP - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Options: "gemini" (default) or "openrouter"
LLM_PROVIDER=gemini

# Gemini API Key (required if LLM_PROVIDER=gemini)
GOOGLE_API_KEY=your-google-api-key-here

# OpenRouter API Key (required if LLM_PROVIDER=openrouter)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/triage_alerts

# -----------------------------------------------------------------------------
# Langfuse Observability (Optional but recommended)
# -----------------------------------------------------------------------------
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=INFO
